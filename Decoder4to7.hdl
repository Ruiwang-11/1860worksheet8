CHIP Decoder4to7 {
    IN in[4];    // 4-bit 输入 (0~15)
    OUT a, b, c, d, e, f, g; // 7 段显示器控制信号

    PARTS:
    // 通过 `DMux` 拆分不同的位
    DMux4Way(in=in[3], sel=in[2..1], a=a1, b=a2, c=a3, d=a4);
    DMux4Way(in=in[0], sel=in[2..1], a=b1, b=b2, c=b3, d=b4);

    // 7 段显示器输出
    Or(a=a1, b=a2, out=a);
    Or(a=b1, b=b2, out=b);
    Or(a=a3, b=b4, out=c);
    Or(a=b3, b=b4, out=d);
    Not(in=a, out=e);
    Not(in=b, out=f);
    Not(in=c, out=g);
}
