CHIP DisplayCounter201890224{
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    // 
    Register(in=newCount, load=load, out=fullCount);

    // 
    And(a=fullCount, b=0000000000001111, out=shortCount);

    // 
    Inc16(in=fullCount, out=nextCount);

    // 
    Mux16(a=nextCount, b=0000000000000000, sel=reset, out=newCount);

    // 
    Or(a=inc, b=reset, out=load);

    // 
    Decoder4to7(in=shortCount[0..3], out=a, out=b, out=c, out=d, out=e, out=f, out=g);
}
