CHIP DisplayCounter201890224 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    // 4 位计数器，使用 Inc16，但仅使用其低 4 位
    Inc16(in=false, out=counterOut, inc=inc);

    // 当 reset 为高时，将计数值归零
    Mux16(a=counterOut, b=false, sel=reset, out=countValue);

    // 7 段译码器，将 4 位计数值转换为 7 段信号
    Decoder4to7(in=countValue[3..0], outA=a, outB=b, outC=c, outD=d, outE=e, outF=f, outG=g);
}
