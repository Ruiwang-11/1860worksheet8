CHIP DisplayCounter201890224 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    // 4-bit counter (using a 16-bit counter and only using the lowest 4 bits)
    Inc16(in=counterOut, out=nextCount, load=load, inc=inc);
    
    // Mux to decide when to reset
    Mux16(a=nextCount, b=false, sel=reset, out=counterOut);

    // Decoder to convert counter output to 7-segment signals
    Decoder4to7(in=counterOut[3..0], outA=a, outB=b, outC=c, outD=d, outE=e, outF=f, outG=g);
}

